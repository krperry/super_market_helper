{
  "name": "store-inventory-manager",
  "version": "1.0.0",
  "description": "Web-based inventory management system for retail store",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "stop": "node stop-server.js",
    "dev": "nodemon server.js",
    "import-csv": "node import-csv.js",
    "fix-targets": "node fix-targets.js",
    "build": "pkg . --targets node18-win-x64 --output dist/StoreInventory.exe",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "bin": "server.js",
  "pkg": {
    "assets": [
      "public/**/*"
    ],
    "outputPath": "dist"
  },
  "keywords": [
    "inventory",
    "management",
    "store",
    "retail"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "pkg": "^5.8.1"
  }
}
