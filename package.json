{
  "name": "store-inventory-manager",
  "version": "1.0.0",
  "description": "Web-based inventory management system for retail store",
  "main": "electron-main.js",
  "scripts": {
    "start": "node server.js",
    "stop": "node stop-server.js",
    "dev": "nodemon server.js",
    "electron": "electron .",
    "electron-dev": "nodemon --exec electron .",
    "build-electron": "electron-builder --win",
    "installer-electron": "powershell -ExecutionPolicy Bypass -File build-electron-installer.ps1",
    "import-csv": "node import-csv.js",
    "fix-targets": "node fix-targets.js",
    "build": "pkg . --targets node18-win-x64 --output dist/StoreInventory.exe && node copy-launcher.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "bin": "server.js",
  "pkg": {
    "assets": [
      "public/**/*",
      "node_modules/sqlite3/**/*"
    ],
    "outputPath": "dist"
  },
  "keywords": [
    "inventory",
    "management",
    "store",
    "retail"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "node-gyp": "^12.1.0",
    "nodemon": "^3.0.1",
    "pkg": "^5.8.1"
  },
  "build": {
    "appId": "com.storeinventory.manager",
    "productName": "Store Inventory Manager",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/icon.ico"
    },
    "files": [
      "electron-main.js",
      "server.js",
      "ensure-default-store.js",
      "public/**/*",
      "database/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "database",
        "to": "database",
        "filter": [
          "**/*"
        ]
      }
    ]
  }
}
